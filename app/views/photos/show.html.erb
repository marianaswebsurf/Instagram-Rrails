
<body style="background-color: #EBEECA;">

<div style="margin-top: 40px;">

<%= link_to 'Logout' , destroy_user_session_path, method: :delete, style: "text-decoration: none; color: white;" "margin-top:-30px;" "margin-left:1200px;", class:"button btn btn-danger" %>

<button type="button" style="margin-left: 220px; margin-top: -25px;" class="btn btn-primary">
  Profile <span class="badge badge-light">7</span>
  <span class="sr-only">unread messages</span>
</button>


<div class="container">
	 <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <% if @photo.image.attached? %> 
			<%= image_tag @photo.image , class:"img-fluid" %>
			<% end %>
            <div class="card-body">
              <p class="card-text"><%= @photo.caption %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
     </div>   #little bug

<% if @photo.images.attached? %>
	<div class="row">
		<% @photo.images.each do |image| %>
		<div class="col-md-4">
          <div class="card mb-4 shadow-sm">
 			<%= image_tag image , class:"img-fluid" %>	
            <div class="card-body">
              <p class="card-text"><%= @photo.caption %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
          </div>	

 	<% end %>	
			
	
 <% else %>
 	<p style="font-family: 'share tech mono', monospace;">enter your comment :</p>
 <% end %>

<ul>	
 <% if @photo.comments.any? %>
	<% @photo.comments.each do |comment| %>
		<li>
		<h4><%= comment.message %><span class="badge badge-success" style="font-family: monospace; margin-left:7px;">New	
	 	</span></h4>
	 	</li>
 	<% end %>
 <% end %>
</ul>

 <%= form_for @comment, url: photo_comments_path(@photo) do |form| %>
 	<%= form.label :message, style:"font-family: 'share tech mono', monospace;" %>
 	<%= form.text_area :message %>

	<%= form.submit 'Submit', class:"btn btn-success" , style:"font-family: 'share tech mono', monospace;" %>
<% end %>
</div>
</body>

